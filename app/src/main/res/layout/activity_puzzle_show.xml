<?xml version="1.0" encoding="utf-8"?>
<com.ttd.jigsawpuzzlev1.component.Floor xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg_floor"
    android:id="@+id/v_floor">

<!--    <com.ttd.jigsawpuzzlev1.component.Floor-->
<!--        android:id="@+id/pb_floor"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="match_parent">-->

<!--    </com.ttd.jigsawpuzzlev1.component.Floor>-->

    <com.ttd.jigsawpuzzlev1.component.PuzzleBoard
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/pb_block_container"
        android:visibility="visible">

        <TextView
            android:id="@+id/tv_board"
            android:layout_width="500dp"
            android:layout_height="500dp"
            android:layout_centerInParent="true"
            android:background="@color/teal_700"
            android:visibility="visible" />
    </com.ttd.jigsawpuzzlev1.component.PuzzleBoard>

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:visibility="gone">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:id="@+id/ll_block_list">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/test_block_1"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/test_block_1"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/test_block_1"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/test_block_1"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/test_block_1"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/test_block_1"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/test_block_1"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/test_block_1"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/test_block_1"/>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/ll_operation">
        <ImageView
            android:id="@+id/v_magnify"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@mipmap/ic_magnify_enable"/>
        <ImageView
            android:id="@+id/v_lessen"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@mipmap/ic_lessen_enable"/>
    </LinearLayout>
</com.ttd.jigsawpuzzlev1.component.Floor>